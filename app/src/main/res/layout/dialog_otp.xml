<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:neumorph_shapeType="basin"
    app:neumorph_backgroundColor="@color/light_background"
    style="@style/Widget.Neumorph.CardView"
    android:layout_height="300dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/ubuntu_r"
            android:text="Enter OTP here"
            android:textColor="@color/text_color" />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        style="@style/Widget.Neumorph.CardView"
        android:layout_below="@id/tv_otp"
        app:neumorph_backgroundColor="@color/light_background"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:neumorph_shapeType="pressed">


        <EditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:textAlignment="center"
            android:fontFamily="@font/ubuntu_r"
            android:hint="Enter Otp here"
            android:textCursorDrawable="@drawable/cursor"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:maxLength="6"
            android:background="@drawable/nobackground"/>
    </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphButton
            android:id="@+id/bttn_verifyOtp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/cv"
            android:text="Verify OTP"
            android:fontFamily="@font/ubuntu_r"
            style="@style/Widget.Neumorph.Button"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tv_resendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/ubuntu_r"
            android:text="Resend OTP"
            android:textColor="@color/text_color"/>
    </RelativeLayout>

</soup.neumorphism.NeumorphCardView>